{
  "manifest_version": 3,
  "name": "AI Dialogue Architect Agent by ReelSights AI",
  "description": "AI Dialogue Architect â€“ Hyper-Personalized Sales for Everyone",

  "version": "2.0",
  "permissions": [
    "scripting",
    "activeTab",
    "notifications",
    "cookies",
    "identity"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://reelsightsai.com/*",
    "http://localhost:4000/*", 
    "https://www.googleapis.com/*"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "242934590241-su4r9eepcub5q56c5cupee44lbsfal51.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar",
      "https://www.googleapis.com/auth/calendar.events"
    ]
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "AI Dialogue Architect Agent"
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["main.js", "assets/*", "images/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
